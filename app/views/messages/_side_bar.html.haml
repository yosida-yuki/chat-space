.side-bar
  .side-header
    .side-header__box
      %p.side-header__box-user-name
      ゆう    
      %ul.side-header__box__menu  
      -#  = link_to new_group_path do
        %li.side-header-box__menu__new-group
         = link_to new_group_path do
            = icon('fas','edit')
        %li.side-header-box__menu__edit-user
          = link_to edit_user_path(current_user) do
            = icon('fas','cog')
            %li.side-header__box__menu__new-group
            %li.side-header__box__menu__edit-user
  .groups
    - current_user.groups.each do |group| 
      .group
      = link_to group_messages_path(group),class:"group" do
        %p.group__group-name
          = group.name
        %p.group__latest-message
        = group.show_last_message
  